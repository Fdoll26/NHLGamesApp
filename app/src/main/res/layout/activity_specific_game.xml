<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
<!--    android:background="@color/background_color">-->

    <!-- Game Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
        <ImageView
            android:id="@+id/awayTeamLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/away_team_logo"
            android:scaleType="fitCenter"/>
<!--            android:src="@drawable/ic_team_placeholder" />-->

            <TextView
                android:id="@+id/awayTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Away Team"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Game Info Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/gameScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: TOR 3 - 2 MTL"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:visibility="gone" />
<!--                android:textColor="@color/primary_text_color"-->
<!--                android:layout_marginTop="4dp"-->
<!--                android:visibility="gone" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
        <ImageView
            android:id="@+id/homeTeamLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/home_team_logo"
            android:scaleType="fitCenter"/>
<!--            android:src="@drawable/ic_team_placeholder" />-->

            <TextView
                android:id="@+id/homeTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Team"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/awayTeamButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Away Team"
            android:layout_marginEnd="4dp"/>
<!--            android:backgroundTint="@color/button_color"-->
<!--            android:textColor="@color/button_text_color" />-->

        <Button
            android:id="@+id/generalOverviewButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="General Overview"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
<!--            android:backgroundTint="@color/button_color"-->
<!--            android:textColor="@color/button_text_color" />-->

        <Button
            android:id="@+id/homeTeamButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home Team"
            android:layout_marginStart="4dp"/>
<!--            android:backgroundTint="@color/button_color"-->
<!--            android:textColor="@color/button_text_color" />-->

    </LinearLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading boxscore data..."
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />
    <!--        android:textColor="@color/secondary_text_color"-->
<!--        android:gravity="center"-->
<!--        android:layout_marginBottom="8dp" />-->

    <!-- Loading Progress Bar -->
    <ProgressBar
        android:id="@+id/loadingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:visibility="visible" />

    <!-- Team Stats Comparison (for general overview) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/teamStatsComparison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team statistics will appear here"
            android:textSize="14sp"
            android:visibility="gone"
            android:fontFamily="monospace"
            android:padding="16dp"/>
<!--            android:background="@drawable/stats_background"-->
<!--            android:textColor="@color/primary_text_color" />-->

    </ScrollView>

    <!-- Player Stats RecyclerView (for team-specific views) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/statsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"/>
<!--        android:background="@drawable/recyclerview_background" />-->

</LinearLayout>